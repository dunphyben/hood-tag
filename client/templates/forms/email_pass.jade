template(name='emailLogin')
  form#login.full.form
    h3.center Form Thang
    .input-group
      i.fa.fa-envelope-o
      input#email(type='email', placeholder='Email')
    .input-group
      i.fa.fa-unlock-alt
      input#pass(type='password', placeholder='Password')
    button(type='submit')
      | Submit Thang
      i.fa.fa-sign-in
    .alert-error.slide-down
